<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sign_up</servlet-name>
        <servlet-class>USER.sign_up</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>sign_updHead</servlet-name>
        <servlet-class>USER.sign_updHead</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>complain</servlet-name>
        <servlet-class>USER.complain</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sign_up</servlet-name>
        <url-pattern>/sign_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sign_updHead</servlet-name>
        <url-pattern>/sign_up_department</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>complain</servlet-name>
        <url-pattern>/complain</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
